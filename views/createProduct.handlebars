<div class="modal fade" id="addCategoryModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Category</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Category Title:</label>
            <input type="text" class="" id="addedCategoryName"></input>
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Category Description:</label>
            <textarea class="form-control" id="addedCategoryDescription"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id = "finishAddCategory">Add Category</button>
      </div>
    </div>
  </div>
</div>

<div id = "uploadButtonHiddenArea" >
    <form id="imageForm" method = "post" enctype = "multipart/form-data" action = "/uploadImage" hidden = "hidden">
    <input type = "file" id = "uploadImage">
    <input type = "submit">
    </form>
    
</div>